<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:background="#FFF"
    android:gravity="center"
    android:padding="@dimen/activity_vertical_margin" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Change Order"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:padding="5dp" >

            <TextView
                android:id="@+id/new_changeorder_mealtype"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="left"
                android:text="Meal Type:"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/new_changeorder_mealtype_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:text="Lunch"
                android:textColor="#000"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:padding="5dp" >

            <TextView
                android:id="@+id/new_changeorder_meal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="left"
                android:text="Meal:"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/new_changeorder_meal_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:text="iaskhdjaskjdasjd"
                android:textColor="#000"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:padding="5dp" >

            <TextView
                android:id="@+id/new_changeorder_vendorname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="left"
                android:text="Vendor:"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/new_changeorder_vendorname_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:text="Vendor"
                android:textColor="#000"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:padding="5dp" >

            <TextView
                android:id="@+id/new_changeorder_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="left"
                android:text="Location"
                android:textSize="15sp"
                android:textStyle="bold" />

            <AutoCompleteTextView
                android:id="@+id/new_changeorder_location_autoCompleteTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:dropDownWidth="wrap_content"
                android:ems="10"
                android:hint="Enter your loation"
                android:padding="8dp"
                android:textColor="#000"
                android:textSize="16sp"
                android:windowSoftInputMode="stateHidden" >

                <requestFocus />
            </AutoCompleteTextView>
        </LinearLayout>

        <EditText
            android:id="@+id/new_changeorder_address_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded"
            android:ems="10"
            android:hint="Address"
            android:inputType="textMultiLine"
            android:padding="10dp"
            android:textColor="#000"
            android:textSize="16sp" >
        </EditText>

        <Button
            android:id="@+id/new_changeorder_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/orangebutton"
            android:gravity="center"
            android:minHeight="40dip"
            android:text="Find Meals"
            android:textColor="#FFF"
            android:textSize="15sp" />
    </LinearLayout>

</ScrollView>