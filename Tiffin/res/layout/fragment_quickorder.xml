<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/linearlayout_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/quickorder_screen_tiffintitle_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/rounded"
                android:drawableLeft="@drawable/battery"
                android:drawablePadding="10dp"
                android:ems="10"
                android:enabled="false"
                android:gravity="left"
                android:inputType="textMultiLine"
                android:maxLines="2"
                android:padding="10dp"
                android:text="MY Tiffin"
                android:textColor="#FF5722" >
            </EditText>

            <EditText
                android:id="@+id/quickorder_screen_name_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded"
                android:drawableLeft="@drawable/network"
                android:drawablePadding="10dp"
                android:ems="8"
                android:enabled="false"
                android:gravity="left"
                android:inputType="text"
                android:padding="10dp"
                android:text="ABC ABC"
                android:textColor="#FF5722" >
            </EditText>

            <EditText
                android:id="@+id/quickorder_screen_email_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded"
                android:drawableLeft="@drawable/black"
                android:drawablePadding="10dp"
                android:ems="8"
                android:enabled="false"
                android:gravity="left"
                android:inputType="textEmailAddress"
                android:padding="10dp"
                android:text="abc@gmail.com"
                android:textColor="#FF5722" />

            <EditText
                android:id="@+id/quickorder_screen_mealtype_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded"
                android:drawablePadding="10dp"
                android:ems="8"
                android:enabled="false"
                android:gravity="left"
                android:inputType="text"
                android:padding="10dp"
                android:text="LUNCH"
                android:textColor="#FF5722" />

            <EditText
                android:id="@+id/quickorder_screen_phoneno_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded"
                android:drawableLeft="@drawable/telephone"
                android:drawablePadding="10dp"
                android:ems="8"
                android:gravity="left"
                android:hint="Enter Phone Number"
                android:inputType="phone"
                android:padding="10dp"
                android:textColor="#FF5722" >

                <requestFocus />
            </EditText>

            <EditText
                android:id="@+id/quickorder_screen_lunchaddress_edittext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@drawable/rounded"
                android:drawableLeft="@drawable/home"
                android:drawablePadding="10dp"
                android:ems="10"
                android:gravity="left"
                android:hint=" Address"
                android:padding="10dp"
                android:textColor="#FF5722" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearlayout_quatity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearlayout_main"
            android:layout_marginTop="10dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/quickorder_screen_textview_quant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:ems="10"
                android:text=" Number of tiffins "
                android:textColor="#000"
                android:textSize="15sp" />

            <LinearLayout
                android:id="@+id/linearlayout_quant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/quickorder_screen_quantity_minus_button"
                    style="@style/Widget.AppCompat.Button.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text=" - "
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/quickorder_screen_textview_quantity"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/rounded"
                    android:ems="10"
                    android:enabled="false"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text=" 1 "
                    android:textColor="#FF5722"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/quickorder_screen_quantity_plus_button"
                    style="@style/Widget.AppCompat.Button.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text=" + "
                    android:textStyle="bold" />
            </LinearLayout>

            <EditText
                android:id="@+id/quickorder_screen_price_edittext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded"
                android:drawableLeft="@drawable/rupee"
                android:drawablePadding="10dp"
                android:ems="8"
                android:enabled="false"
                android:gravity="center"
                android:padding="10dp"
                android:text="120"
                android:textColor="#FF5722" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearlayout_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearlayout_quatity"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10sp"
                    android:ems="10"
                    android:text=" Payment Type "
                    android:textColor="#000"
                    android:textSize="15sp" />

                <RadioGroup
                    android:id="@+id/radioGroup2"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:orientation="horizontal" >

                        <RadioButton
                            android:id="@+id/quickorder_screen_onlinepayment_radiobutton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text=" Online Payment " />

                        <RadioButton
                            android:id="@+id/quickorder_screen_cashondelivery_radiobutton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text=" Cash On Delivery " />
                    </LinearLayout>
                </RadioGroup>
            </LinearLayout>

            <Button
                android:id="@+id/quickorder_screen_proceed_button"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/menubutton"
                android:text="Proceed"
                android:textColor="#FFf"
                android:textSize="14sp"
                android:textStyle="bold"
                android:typeface="serif" />
        </LinearLayout>
    </RelativeLayout>

</ScrollView>