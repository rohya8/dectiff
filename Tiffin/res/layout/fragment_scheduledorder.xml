<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#fff" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/scheduled_order_editText_TiffinName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/rounded"
                android:drawableLeft="@drawable/battery"
                android:drawablePadding="10dp"
                android:ems="10"
                android:enabled="false"
                android:gravity="left"
                android:inputType="text"
                android:padding="10dp"
                android:text="MY Tiffin"
                android:textColor="#FF5722" />

            <EditText
                android:id="@+id/scheduled_order_editText_Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded"
                android:drawableLeft="@drawable/network"
                android:drawablePadding="10dp"
                android:ems="8"
                android:enabled="false"
                android:gravity="left"
                android:inputType="text"
                android:padding="10dp"
                android:text="ABC ABC"
                android:textColor="#FF5722" >
            </EditText>

            <EditText
                android:id="@+id/scheduled_order_editText_Email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded"
                android:drawableLeft="@drawable/black"
                android:drawablePadding="10dp"
                android:ems="8"
                android:enabled="false"
                android:gravity="left"
                android:inputType="textEmailAddress"
                android:padding="10dp"
                android:text="abc@gmail.com"
                android:textColor="#FF5722" />

            <EditText
                android:id="@+id/scheduled_order_mealtype_editText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded"
                android:drawableLeft="@drawable/clocktime"
                android:drawablePadding="10dp"
                android:ems="10"
                android:enabled="false"
                android:gravity="left"
                android:inputType="text"
                android:padding="10dp"
                android:text=" Lunch for Date"
                android:textColor="#FF5722" />

            <EditText
                android:id="@+id/scheduled_order_editText_Price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded"
                android:drawableLeft="@drawable/rupee"
                android:drawablePadding="10dp"
                android:ems="8"
                android:enabled="false"
                android:gravity="left"
                android:padding="10dp"
                android:text="120"
                android:textColor="#FF5722" />

            <EditText
                android:id="@+id/scheduled_order_editText_Phoneno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded"
                android:drawableLeft="@drawable/telephone"
                android:drawablePadding="10dp"
                android:ems="8"
                android:gravity="left"
                android:hint="Enter Phone Number"
                android:inputType="phone"
                android:padding="10dp"
                android:textColor="#FF5722" >

                <requestFocus />
            </EditText>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <EditText
                    android:id="@+id/scheduled_order_editText_LunchAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded"
                    android:drawableLeft="@drawable/home"
                    android:drawablePadding="10dp"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="Lunch Address"
                    android:padding="10dp"
                    android:textColor="#FF5722" />

                <EditText
                    android:id="@+id/scheduled_order_editText_DinnerAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded"
                    android:drawablePadding="10dp"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="Dinner Address"
                    android:padding="10dp"
                    android:textColor="#FF5722"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/scheduled_order_proceed_button"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/menubutton"
                    android:text="Proceed"
                    android:textColor="#FFf"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:typeface="serif" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</ScrollView>